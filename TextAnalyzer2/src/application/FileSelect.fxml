<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="118.0" prefWidth="362.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FileSelectController">
   <children>
      <VBox prefHeight="118.0" prefWidth="362.0">
         <children>
            <VBox prefHeight="81.0" prefWidth="374.0">
               <children>
                  <Label fx:id="fileSelectPrompt" text="Select file to analyze:" />
                  <HBox alignment="CENTER_RIGHT" prefHeight="43.0" prefWidth="374.0" spacing="25.0">
                     <children>
                        <Label fx:id="fileDirectoryLabel" text="Selected File Directory" />
                        <Button fx:id="fileSelectButton" mnemonicParsing="false" onAction="#selectFile" prefHeight="25.0" prefWidth="86.0" text="Browse..." />
                     </children>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="BOTTOM_RIGHT" prefHeight="29.0" prefWidth="374.0">
               <children>
                  <Button fx:id="confirmFileSelectButton" mnemonicParsing="false" text="Next" />
               </children>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
